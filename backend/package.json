{
  "name": "exploratour-backend",
  "author": "Wellington Lima",
  "private": true,
  "version": "1.0.0",
  "description": "Backend Exploratour",
  "main": "src/server.ts",
  "scripts": {
    "server": "npm run services:up && npm run services:wait-database && tsx watch src/server.ts",
    "test:watch": "npm run services:wait-database && vitest watch --no-file-parallelism",
    "test": "npm run services:up && concurrently -n server,vitest -k -s command-vitest \"npm run server\" \"vitest run --no-file-parallelism\"",
    "posttest": "npm run services:down",
    "services:up": "docker compose -f src/compose.yaml up -d",
    "services:stop": "docker compose -f src/compose.yaml up stop",
    "services:down": "docker compose -f src/compose.yaml down",
    "migrations:create": "node-pg-migrate -m src/infra/migrations create -j ts",
    "migrations:up": "node-pg-migrate -m src/infra/migrations --envPath .env.development up",
    "services:wait-database": "node src/infra/scripts/wait-for-postgres.ts",
    "start": "node dist/server.js",
    "build": "tsc"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "17.2.2",
    "dotenv-expand": "12.0.3",
    "express": "5.1.0",
    "pg": "8.16.3",
    "vite-tsconfig-paths": "5.1.4",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@types/async-retry": "1.4.9",
    "@types/express": "5.0.3",
    "@types/node": "24.5.2",
    "@types/pg": "8.15.5",
    "node-pg-migrate": "8.0.3",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
